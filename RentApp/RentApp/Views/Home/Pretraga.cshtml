@{
    ViewBag.Title = "Pretraga";
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="Content/img/favicon.ico">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />


    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />


    <!-- Bootstrap core CSS     -->
    <link href="Content/bootstrap.min.css" rel="stylesheet" />

    <!-- Animation library for notifications   -->
    <link href="Content/animate.min.css" rel="stylesheet" />

    <!--  Light Bootstrap Table core CSS    -->
    <link href="Content/light-bootstrap-dashboard.css" rel="stylesheet" />


    <!--  CSS for Demo Purpose, don't include it in your project     -->
    <link href="Content/demo.css" rel="stylesheet" />


    <!--     Fonts and icons     -->
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    <link href='http://fonts.googleapis.com/css?family=Roboto:400,700,300' rel='stylesheet' type='text/css'>
    <link href="Content/pe-icon-7-stroke.css" rel="stylesheet" />
</head>
<body>
    <div class="wrapper">

        <div class="sidebar" data-color="azure" data-image="Content/img/sidebar-1.jpg" style="background-repeat:repeat; margin-bottom: -99999px; padding-bottom: 99999px; overflow-y: hidden">

            <div class="sidebar-wrapper">
                <div class="logo">
                    <a class="simple-text">
                        Rent a car
                    </a>
                </div>

                <ul class="nav">
                    <li>
                        <a href="@Url.Action("Index", "Home")">
                            <i class="fa fa-home"></i>
                            <p>Home</p>
                        </a>
                    </li>
                    @*<li>
                        <a href="Rezervisi">
                            <i class="fa fa-list-ul"></i>
                            <p>Rezervacija</p>
                        </a>
                    </li>*@


                    <li class="active">
                        <a href="@Url.Action("Pretraga", "Home")">
                            <i class="fa fa-search"></i>
                            <p>Pretraga</p>
                        </a>
                    </li>
                    @*<li>
                        <a href="Contact">
                            <i class="fa fa-globe"></i>
                            <p>Kontakt</p>
                        </a>
                    </li>*@


                </ul>
            </div>
        </div>

        <div class="main-panel">
            <nav class="navbar navbar-default navbar-fixed">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navigation-example-2">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand">Pretraga</a>
                    </div>
                    <div class="collapse navbar-collapse">

                        <ul class="nav navbar-nav navbar-right">

                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    Pretraga
                                    <b class="caret"></b>
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a href="#">Vozila</a></li>
                                    <li><a href="#">Rezervacija</a></li>
                                    <li class="divider"></li>
                                    <li><a href="#">Kontakt</a></li>
                                </ul>
                            </li>

                        </ul>
                    </div>
                </div>
            </nav>


            <div class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="card">
                                <div class="header">
                                    <h4 class="title">Unesite filtere za pretragu</h4>
                                </div>
                                <div class="content">
                                        <div class="column">
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label>Marka automobila</label>
                                                    
                                                    @{var listItems = new List<SelectListItem>
                                                    {
                                                          new SelectListItem { Text = "BMW", Value="BMW" },
                                                          new SelectListItem { Text = "Citroen", Value="Citroen" },
                                                          new SelectListItem { Text = "Audi", Value="Audi" },
                                                          new SelectListItem { Text = "Porsche", Value="Porsche" }
                                                    };
                                                    }
                                                    @Html.DropDownList("Automobili", new SelectList(listItems, "Value", "Text"),new { @class = "form-control" })
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label>Tip automobila</label>

                                                    @{var listItems1 = new List<SelectListItem>
                                                    {
                                                          new SelectListItem { Text = "Limuzina", Value="Limuzina" },
                                                          new SelectListItem { Text = "Heč bek", Value="Heč" },
                                                          new SelectListItem { Text = "Karavan", Value="Karavan" },
                                                          new SelectListItem { Text = "Kupe", Value="Kupe" },
                                                          new SelectListItem { Text = "Kabriolet", Value="Kabriolet" },
                                                          new SelectListItem { Text = "Mini ven", Value="Mini ven" },
                                                          new SelectListItem { Text = "Dzip", Value="Dzip" },
                                                          new SelectListItem { Text = "Pick up", Value="Pick up" },
                                                          new SelectListItem { Text = "Kombi", Value="Kombi" }
                                                    };
                                                    }
                                                    @Html.DropDownList("Automobili", new SelectList(listItems1, "Value", "Text"), new { @class = "form-control" })
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label>Broj sjedišta</label>

                                                    @{var listItems2 = new List<SelectListItem>
                                                    {
                                                          new SelectListItem { Text = "2", Value="2" },
                                                          new SelectListItem { Text = "4", Value="4" },
                                                          new SelectListItem { Text = "5", Value="5" },
                                                          new SelectListItem { Text = "7", Value="7" },
                                                          new SelectListItem { Text = "9", Value="9" },
                                                          new SelectListItem { Text = "12", Value="12" }
                                                    };
                                                    }
                                                    @Html.DropDownList("Automobili", new SelectList(listItems2, "Value", "Text"), new { @class = "form-control" })
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label>Broj vrata</label>

                                                    @{var listItems3 = new List<SelectListItem>
                                                    {
                                                          new SelectListItem { Text = "3", Value="2" },
                                                          new SelectListItem { Text = "4", Value="4" },
                                                          new SelectListItem { Text = "5", Value="5" }
                                                    };
                                                    }
                                                    @Html.DropDownList("Automobili", new SelectList(listItems3, "Value", "Text"), new { @class = "form-control" })
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label>Mjenjač</label>

                                                    @{var listItems4 = new List<SelectListItem>
                                                    {
                                                          new SelectListItem { Text = "Manuelni", Value="Manuelni" },
                                                          new SelectListItem { Text = "Automatski", Value="Automatski" }
                                                    };
                                                    }
                                                    @Html.DropDownList("Automobili", new SelectList(listItems4, "Value", "Text"), new { @class = "form-control" })
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label>Klima</label>

                                                    @{var listItems5 = new List<SelectListItem>
                                                    {
                                                          new SelectListItem { Text = "DA", Value="Da" },
                                                          new SelectListItem { Text = "NE", Value="Ne" }
                                                    };
                                                    }
                                                    @Html.DropDownList("Automobili", new SelectList(listItems5, "Value", "Text"), new { @class = "form-control" })
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label>Gorivo</label>

                                                    @{var listItems6 = new List<SelectListItem>
                                                    {
                                                          new SelectListItem { Text = "Dizel", Value="D" },
                                                          new SelectListItem { Text = "Benzin", Value="B" },
                                                          new SelectListItem { Text = "Plin", Value="P" }
                                                    };
                                                    }
                                                    @Html.DropDownList("Automobili", new SelectList(listItems6, "Value", "Text"), new { @class = "form-control" })
                                                </div>
                                            </div>
                                            <div class="clearfix"></div>
                                           
                                            <div class="footer">

                                                <hr>
                                                <div class="stats">
                                                    <button class="btn btn-info btn-fill pull-right"
                                                            onclick="@("window.location.href='" + @Url.Action("Index", "home") + "'");" style="margin-left:610px">
                                                        Pretraži
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                       
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>


            <footer class="footer">
                <div class="container-fluid">

                    <p class="copyright pull-right">
                        &copy; 2016 <a>Dženana Bričić, Sabina Grošić, Aida Hasović</a>
                    </p>
                </div>
            </footer>
        </div>
    </div>


</body>

<!--   Core JS Files   -->
<script src="Scripts/jquery-1.10.2.js" type="text/javascript"></script>
<script src="Scripts/bootstrap.min.js" type="text/javascript"></script>

<!--  Checkbox, Radio & Switch Plugins -->
<script src="Scripts/bootstrap-checkbox-radio-switch.js"></script>

<!--  Charts Plugin -->
<script src="Scripts/chartist.min.js"></script>

<!--  Notifications Plugin    -->
<script src="Scripts/bootstrap-notify.js"></script>

<!--  Google Maps Plugin    -->
<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?sensor=false"></script>

<!-- Light Bootstrap Table Core javascript and methods for Demo purpose -->
<script src="Scripts/light-bootstrap-dashboard.js"></script>

<!-- Light Bootstrap Table DEMO methods, don't include it in your project! -->
<script src="Scripts/demo.js"></script>

</html>

