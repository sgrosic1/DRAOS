    <!--     Fonts and icons     -->
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    <link href='http://fonts.googleapis.com/css?family=Roboto:400,700,300' rel='stylesheet' type='text/css'>
    <link href="Content/pe-icon-7-stroke.css" rel="stylesheet" />
</head>
<body>
    <div class="wrapper">
        <div class="sidebar" data-color="azure" data-image="Content/img/sidebar-4.jpg">

            <div class="sidebar-wrapper">
                <div class="logo">
                    <a class="simple-text">
                        Rent a car
                    </a>
                </div>

                <ul class="nav">
                    <li>
                        <a href="Index">
                            <i class="fa fa-home"></i>
                            <p>Home</p>
                        </a>
                    </li>
                    <li class="active">
                        <a href="Rezervisi">
                            <i class="fa fa-list-ul"></i>
                            <p>Rezervacija</p>
                        </a>
                    </li>


                    @*<li>
                        <a href="Pretraga">
                            <i class="fa fa-search"></i>
                            <p>Pretraga</p>
                        </a>
                    </li>*@
                    <li>
                        <a href="Contact">
                            <i class="fa fa-globe"></i>
                            <p>Kontakt</p>
                        </a>
                    </li>


                </ul>
            </div>
        </div>

        <div class="main-panel">
            <nav class="navbar navbar-default navbar-fixed">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navigation-example-2">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand">Rezervacija</a>
                    </div>
                    <div class="collapse navbar-collapse">
                        <ul class="nav navbar-nav navbar-left">
                            <li>
                                <a href="">
                                    <i class="fa fa-search"></i>
                                </a>
                            </li>
                        </ul>

                        <ul class="nav navbar-nav navbar-right">

                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    Pretraga
                                    <b class="caret"></b>
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a href="#">Vozila</a></li>
                                    <li><a href="#">Rezervacija</a></li>
                                    <li class="divider"></li>
                                    <li><a href="#">Kontakt</a></li>
                                </ul>
                            </li>

                        </ul>
                    </div>
                </div>
            </nav>


            <div class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="card">
                                <div class="content">
                                    <form>
                                        <div style="border-style: solid; border-color: #9A9A9A; border-width: 1px;">
                                            <div class="row">
                                                <div class="col-sm-4">
                                                    <img src="~/Content/img/audi3.jpg" class="img-rounded" width="204" height="136" align="left" style="margin-left:5px; margin-bottom:5px;"/>
                                                </div>
                                                <div class="col-sm-4">
                                                    </br>
                                                    <i class="fa fa-tint"></i><span style="color: #9A9A9A; font-family: Helvetica Neue,Helvetica,Arial,sans-serif;">        Vrsta goriva: benzin</span></br>
                                                    <i class="fa fa-briefcase"></i><span style="color: #9A9A9A; font-family: Helvetica Neue ,helvetica,arial,sans-serif;">        3x broj prtljaga</span></br>
                                                    <i class="fa fa-user"></i><span style="color: #9A9A9A; font-family: Helvetica Neue ,helvetica,arial,sans-serif;">        4x broj osoba</span></br>
                                                    <i class="fa fa-wrench"></i><span style="color: #9A9A9A; font-family: Helvetica Neue ,helvetica,arial,sans-serif;">        7 l/100km</span></br>
                                                    <i class="fa fa-share"></i><span style="color: #9A9A9A; font-family: Helvetica Neue ,helvetica,arial,sans-serif;">        Transmisija: Manuelna</span>
                                                </div>
                                                <div class="col-sm-4">
                                                    </br>

                                                     <input type="checkbox" value="" data-toggle="checkbox">
                                                    <label>GPS - 15KM</label>
                                                    <br />
                                                     <input type="checkbox" value="" data-toggle="checkbox">
                                                    <label>Dječija sjedalica - 10KM</label>
                                                    <br />
                                                    <input type="checkbox" value="" data-toggle="checkbox">
                                                    <label>Zimska oprema - 20KM</label>

                                                    <h4><b>Cijena: 500 KM</b></h4>
                                                </div>
                                           </div>

                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="card">
                                <div class="header">
                                    <h4 class="title">Unesite podatke</h4>
                                </div>
                                <div class="content">
                                    <form>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label>Ime</label>
                                                    <input type="text" class="form-control">
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label>Prezime</label>
                                                    <input type="text" class="form-control">
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-5">
                                                <div class="form-group">
                                                    <input type="text" class="form-control" disabled placeholder="Company">
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <input type="text" class="form-control" placeholder="Broj telefona">
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <input type="email" class="form-control" placeholder="Email adresa">
                                                </div>
                                            </div>
                                        </div>

                                        
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <input type="text" class="form-control" placeholder="Adresa stanovanja" >
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <input type="text" class="form-control" placeholder="Grad">
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <input type="text" class="form-control" placeholder="Država">
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <input type="number" class="form-control" placeholder="Poštanski broj">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <input type="text" class="form-control" placeholder="Broj vozačke dozvole">
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label>Komentar</label>
                                                    <textarea rows="5" class="form-control" placeholder="Ovdje možete ostaviti svoj komentar"></textarea>
                                                </div>
                                            </div>
                                        </div>

                                        <button type="submit" class="btn btn-info btn-fill pull-right">Rezerviši</button>
                                        <div class="clearfix"></div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
               
            </div>


            <footer class="footer">
                <div class="container-fluid">

                    <p class="copyright pull-right">
                        &copy; 2016 <a>Dženana Bričić, Sabina Grošić, Aida Hasović</a>
                    </p>
                </div>
            </footer>
        </div>
    </div>


</body>

