@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $(document).ready(function () {
            $("#btnPretrazi").click(function () {

                var valueDate = document.getElementById('polazakdatum').value;
                var valueDate1 = document.getElementById('dolazakdatum').value;
                var valueHour = document.getElementById('satidolazak').value;
                var valueHour1 = document.getElementById('satipolazak').value;


                if (!valueDate || !valueDate1 || !valueHour || !valueHour1) {
                    validation(valueDate, valueDate1, valueHour, valueHour1);

                }
                else {
                    document.getElementById("btnPretrazi").disabled = false;
                    $("#dostupnaVozila").toggle();

                }
            });

        });

        function validation(valueDate, valueDate1, valueHour, valueHour1) {

            document.getElementById("btnPretrazi").disabled = true;
            var flag = 0;

            if (!valueDate) {
                document.getElementById('polazakdatum').style.borderColor = "red";
                document.getElementById("error0").innerHTML = "Datum i vrijeme polaska ne mogu biti prazna polja!";
                flag = 1;
            }
            else {
                document.getElementById('polazakdatum').style.borderColor = "#ccc";
                document.getElementById("error0").innerHTML = "";
                document.getElementById("btnPretrazi").disabled = false;
            }
            if (!valueDate1) {
                document.getElementById('dolazakdatum').style.borderColor = "red";
                document.getElementById("error1").innerHTML = "Datum i vrijeme dolaska ne mogu biti prazna polja!";
                flag = 1;
            }
            else {
                document.getElementById('dolazakdatum').style.borderColor = "#ccc";
                document.getElementById("error1").innerHTML = "";
                document.getElementById("btnPretrazi").disabled = false;
            }
            if (!valueHour) {
                document.getElementById('satidolazak').style.borderColor = "red";
                document.getElementById("error1").innerHTML = "Datum i vrijeme dolaska ne mogu biti prazna polja!";
                flag = 1;
            }
            else {
                document.getElementById('satidolazak').style.borderColor = "#ccc";
                document.getElementById("error1").innerHTML = "";
                document.getElementById("btnPretrazi").disabled = false;
            }
            if (!valueHour1) {
                document.getElementById('satipolazak').style.borderColor = "red";
                document.getElementById("error0").innerHTML = "Datum i vrijeme polaska ne mogu biti prazna polja!";
                flag = 1;
            }
            else {
                document.getElementById('satipolazak').style.borderColor = "#ccc";
                document.getElementById("error0").innerHTML = "";
                document.getElementById("btnPretrazi").disabled = false;
            }
        }



        function validateInputPolazakDatum(polazakdatum) {
            if (!polazakdatum) {
                document.getElementById('polazakdatum').style.borderColor = "red";
                document.getElementById("error0").innerHTML = "Datum i vrijeme polaska ne mogu biti prazna polja!";
                document.getElementById("btnPretrazi").disabled = true;
                flag = 1;
            }
            else {
                document.getElementById('polazakdatum').style.borderColor = "#ccc";
                document.getElementById("error0").innerHTML = "";
                document.getElementById("btnPretrazi").disabled = false;
            }
        }
        function validateInputSatiPolazak(satipolazak) {

            if (!satipolazak) {
                document.getElementById('satipolazak').style.borderColor = "red";
                document.getElementById("error0").innerHTML = "Datum i vrijeme polaska ne mogu biti prazna polja!";
                document.getElementById("btnPretrazi").disabled = true;
                flag = 1;
            }

            else {
                document.getElementById('satipolazak').style.borderColor = "#ccc";
                document.getElementById("error0").innerHTML = "";
                document.getElementById("btnPretrazi").disabled = false;
            }
        }

        function validateInputDolazakDatum(dolazakdatum) {
            if (!dolazakdatum) {
                document.getElementById('dolazakdatum').style.borderColor = "red";
                document.getElementById("error1").innerHTML = "Datum i vrijeme dolaska ne mogu biti prazna polja!";
                document.getElementById("btnPretrazi").disabled = true;
                flag = 1;
            }
            else {
                document.getElementById('dolazakdatum').style.borderColor = "#ccc";
                document.getElementById("error1").innerHTML = "";
                document.getElementById("btnPretrazi").disabled = false;
            }
        }
        function validateInputSatiDolazak(satidolazak) {

            if (!satidolazak) {
                document.getElementById('satidolazak').style.borderColor = "red";
                document.getElementById("error1").innerHTML = "Datum i vrijeme dolaska ne mogu biti prazna polja!";
                document.getElementById("btnPretrazi").disabled = true;
                flag = 1;
            }

            else {
