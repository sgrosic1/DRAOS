        $(document).ready(function () {
            $("#btnRezervacija").click(function () {

                var brojRezervacije = document.getElementById('brojRezervacije').value;
                var email = document.getElementById('email').value;


                if (!brojRezervacije || !email) {
                    validation(brojRezervacije, email);

                }
                else if (email != sessionStorage.getItem('email'))
                {
                    document.getElementById('email').style.borderColor = "red";
                    document.getElementById("error1").innerHTML = "Email ne odgovara unesenom email-u prilikom rezervacije automobila!";
                    flag = 1;
                }
                else if (brojRezervacije != 1234) {
                    document.getElementById('brojRezervacije').style.borderColor = "red";
                    document.getElementById("error0").innerHTML = "Broj rezervacije ne odgovara dobivenom kodu za pretragu rezervacije!";
                    flag = 1;
                }
                else {
                    document.getElementById("btnRezervacija").disabled = true;
                    $("#Sakrij").toggle();

                }


            });


            $("#btnRezervacija").hover(function () {
                $('[data-toggle="tooltip"]').tooltip();
            });
        });


        $(document).ready(function () {
            $("#btnIzmijeni").click(function () {

                var izmijeni = document.getElementById('btnIzmijeni');
                var sacuvaj = document.getElementById('btnSacuvaj');

