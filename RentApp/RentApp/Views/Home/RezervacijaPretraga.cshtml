        function validation(brojRezervacije, email) {

            document.getElementById("btnRezervacija").disabled = true;
            var flag = 0;

            if (!brojRezervacije) {
                document.getElementById('brojRezervacije').style.borderColor = "red";
                document.getElementById("error0").innerHTML = "Broj rezervacije ne može biti prazno polje!";
                flag = 1;
            }
            else {
                document.getElementById('brojRezervacije').style.borderColor = "#ccc";
                document.getElementById("error0").innerHTML = "";
                document.getElementById("btnRezervacija").disabled = false;
            }
            if (!email) {
                document.getElementById('email').style.borderColor = "red";
                document.getElementById("error1").innerHTML = "Email ne može biti prazno polje!";
                flag = 1;
            }
            else {
                document.getElementById('email').style.borderColor = "#ccc";
                document.getElementById("error1").innerHTML = "";
                document.getElementById("btnRezervacija").disabled = false;
            }


        }
        function validateInputBrojRegistracije(brojRezervacije) {
            if (!brojRezervacije) {
                document.getElementById('brojRezervacije').style.borderColor = "red";
                document.getElementById("error0").innerHTML = "Broj rezervacije ne može biti prazno polje!";
                flag = 1;
            }
            else {
                document.getElementById('brojRezervacije').style.borderColor = "#ccc";
                document.getElementById("error0").innerHTML = "";
                document.getElementById("btnRezervacija").disabled = false;
            }

        }

        function validateInputEmail(email) {

            if (!email) {
                document.getElementById('email').style.borderColor = "red";
                document.getElementById("error1").innerHTML = "Email ne može biti prazno polje!";
                flag = 1;
            }

            else {
                document.getElementById('email').style.borderColor = "#ccc";
                document.getElementById("error1").innerHTML = "";
                document.getElementById("btnRezervacija").disabled = false;
            }

        }



