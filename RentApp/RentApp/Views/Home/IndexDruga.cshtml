@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $(document).ready(function () {
            $("#btn").click(function () {
                $("#Create").toggle();
            });
        });

        $(document).ready(function () {
            $("#btnPretrazi").click(function () {
                $("#dostupnaVozila").toggle();
            });
        });
    </script>
