            </ul>
        </div>
    </div>

    <div class="main-panel">
        <nav class="navbar navbar-default navbar-fixed">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navigation-example-2">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand">Home</a>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav navbar-left">
                        <li>
                            <a href="">
                                <i class="fa fa-search"></i>
                            </a>
                        </li>
                    </ul>

                    <ul class="nav navbar-nav navbar-right">

                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                Pretraga
                                <b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a href="@Url.Action("Pretraga", "Home")">Pretraga vozila</a></li>
                                <li><a href="@Url.Action("RezervacijaPretraga", "Home")">Rezervacija</a></li>
                                <li class="divider"></li>
                                <li><a href="@Url.Action("Contact", "Home")">Kontakt</a></li>
                            </ul>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>

        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-4">
                        <div class="card" style="width:360px">
                            <div class="header">
                                <h4 class="title">Pretraživanje vozila</h4>
                            </div>
                            <div class="content">
                                <div id='datepicker'>
                                    <p>
                                        Datum polaska:
                                        <input type="date" name="datepicker" style="width:160px" />
                                        <input type="number" id="sati" style="width:35px" min="1" max="24" /> h
                                    </p>
                                    <p>
                                        Datum dolaska:
                                        <input type="date" name="datepicker" style="width:160px" />
                                        <input type="number" id="sati" style="width:35px" min="1" max="24" /> h
                                    </p>
                                </div>
                                <div class="footer">

                                    <hr>
                                    <div class="stats">
                                        <input type="button" id="btnPretrazi" class="btn btn-info btn-fill pull-right" style="margin-left:120px" value="Pretraži">
                                        <input type="button" id="btn" class="btn btn-info btn-fill pull-right" value="Dodatni filteri">
                                    </div>
                                </div>
                                <div class="content" id="Create" style="display:none">

                                    <h4 class="title">Unesite filtere za pretragu</h4>

                                    <div class="content">
                                        <label>Marka automobila</label>
                                        @{var listItems = new List<SelectListItem>
                                                    {
                                                          new SelectListItem { Text = "BMW", Value="BMW" },
                                                          new SelectListItem { Text = "Citroen", Value="Citroen" },
                                                          new SelectListItem { Text = "Audi", Value="Audi" },
                                                          new SelectListItem { Text = "Porsche", Value="Porsche" }
                                                    };
                                        }
                                        @Html.DropDownList("Automobili", new SelectList(listItems, "Value", "Text"), new { @class = "form-control" })

                                        <br />
                                        <label>Tip automobila</label>

                                        @{var listItems1 = new List<SelectListItem>
                                                    {
                                                          new SelectListItem { Text = "Limuzina", Value="Limuzina" },
                                                          new SelectListItem { Text = "Heč bek", Value="Heč" },
                                                          new SelectListItem { Text = "Karavan", Value="Karavan" },
                                                          new SelectListItem { Text = "Kupe", Value="Kupe" },
                                                          new SelectListItem { Text = "Kabriolet", Value="Kabriolet" },
                                                          new SelectListItem { Text = "Mini ven", Value="Mini ven" },
                                                          new SelectListItem { Text = "Dzip", Value="Dzip" },
                                                          new SelectListItem { Text = "Pick up", Value="Pick up" },
                                                          new SelectListItem { Text = "Kombi", Value="Kombi" }
                                                    };
                                        }
                                        @Html.DropDownList("Automobili", new SelectList(listItems1, "Value", "Text"), new { @class = "form-control" })

                                        <br />

                                        <label>Broj sjedišta</label>

                                        @{var listItems2 = new List<SelectListItem>
                                                    {
                                                          new SelectListItem { Text = "2", Value="2" },
                                                          new SelectListItem { Text = "4", Value="4" },
                                                          new SelectListItem { Text = "5", Value="5" },
                                                          new SelectListItem { Text = "7", Value="7" },
                                                          new SelectListItem { Text = "9", Value="9" },
                                                          new SelectListItem { Text = "12", Value="12" }
                                                    };
                                        }
                                        @Html.DropDownList("Automobili", new SelectList(listItems2, "Value", "Text"), new { @class = "form-control" })

                                        <br />

                                        <label>Broj vrata</label>

                                        @{var listItems3 = new List<SelectListItem>
                                                    {
                                                          new SelectListItem { Text = "3", Value="2" },
                                                          new SelectListItem { Text = "4", Value="4" },
                                                          new SelectListItem { Text = "5", Value="5" }
                                                    };
                                        }
                                        @Html.DropDownList("Automobili", new SelectList(listItems3, "Value", "Text"), new { @class = "form-control" })

                                        <br />

                                        <label>Mjenjač</label>

                                        @{var listItems4 = new List<SelectListItem>
                                                    {
                                                          new SelectListItem { Text = "Manuelni", Value="Manuelni" },
                                                          new SelectListItem { Text = "Automatski", Value="Automatski" }
                                                    };
                                        }
                                        @Html.DropDownList("Automobili", new SelectList(listItems4, "Value", "Text"), new { @class = "form-control" })


                                        <br />
                                        <label>Klima</label>

                                        @{var listItems5 = new List<SelectListItem>
                                                    {
                                                          new SelectListItem { Text = "DA", Value="Da" },
                                                          new SelectListItem { Text = "NE", Value="Ne" }
                                                    };
                                        }
                                        @Html.DropDownList("Automobili", new SelectList(listItems5, "Value", "Text"), new { @class = "form-control" })

                                        <br />
                                        <label>Gorivo</label>

                                        @{var listItems6 = new List<SelectListItem>
                                                    {
                                                          new SelectListItem { Text = "Dizel", Value="D" },
                                                          new SelectListItem { Text = "Benzin", Value="B" },
                                                          new SelectListItem { Text = "Plin", Value="P" }
                                                    };
                                        }
                                        @Html.DropDownList("Automobili", new SelectList(listItems6, "Value", "Text"), new { @class = "form-control" })

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-7" id="dostupnaVozila" style="display:block;right:3px;left:80px;">
                        <div class="card">
                            <div class="header">
                                <h4 class="title">Dostupna vozila</h4>
                            </div>
                            <div class="content">
                                <div style="border-style:solid; border-color:black; border-width:1px;">
                                    <div class="row">
                                        <div class="col-sm-4">
                                            <img src="Content/img/mercedes.jpg" class="img-rounded" width="204" height="136" align="left" />
                                        </div>
                                        <div class="col-sm-4" style="margin-left:10px">
                                            </br>
                                            <i class="fa fa-tint"></i><span>        Vrsta goriva: benzin</span></br>
                                            <i class="fa fa-briefcase"></i><span>        3x broj prtljaga</span></br>
                                            <i class="fa fa-user"></i><span>        4x broj osoba</span></br>
                                            <i class="fa fa-wrench"></i><span>        7 l/100km</span></br>
                                            <i class="fa fa-share"></i><span>        Transmisija: Manuelna</span>
                                        </div>
                                        <div class="col-sm-3 control-label" style="margin-left:3px">
                                            <button type="submit" class="btn btn-info btn-fill pull-right" style="margin-bottom:10px; margin-top:85px; margin-right:0px;"
                                                    onclick="@("window.location.href='" + @Url.Action("Rezervisi", "home") + "'");">
                                                Rezerviši
                                            </button>
                                        </div>

                                    </div>

                                </div>

                                <br />
                                <div style="border-style:solid; border-color:black; border-width:1px;">
                                    <div class="row">
                                        <div class="col-sm-4">
                                            <img src="Content/img/opel_astra.jpg" class="img-rounded" width="204" height="136" align="left" />
                                        </div>
                                        <div class="col-sm-4" style="margin-left:10px">
                                            </br>
                                            <i class="fa fa-tint"></i><span>        Vrsta goriva: benzin</span></br>
                                            <i class="fa fa-briefcase"></i><span>        3x broj prtljaga</span></br>
                                            <i class="fa fa-user"></i><span>        4x broj osoba</span></br>
                                            <i class="fa fa-wrench"></i><span>        7 l/100km</span></br>
                                            <i class="fa fa-share"></i><span>        Transmisija: Manuelna</span>
                                        </div>
                                        <div class="col-sm-3 control-label" style="margin-left:3px">
                                            <button type="submit" class="btn btn-info btn-fill pull-right" style="margin-bottom:10px; margin-top:85px; margin-right:0px;"
                                                    onclick="@("window.location.href='" + @Url.Action("Rezervisi", "home") + "'");">
                                                Rezerviši
                                            </button>
                                        </div>

                                    </div>

                                </div>
                                <br />
                                <div style="border-style:solid; border-color:black; border-width:1px;">
                                    <div class="row">
                                        <div class="col-sm-4">
                                            <img src="Content/img/peugeot.jpg" class="img-rounded" width="204" height="136" align="left" />
                                        </div>
                                        <div class="col-sm-4" style="margin-left:10px">
                                            </br>
                                            <i class="fa fa-tint"></i><span>        Vrsta goriva: benzin</span></br>
                                            <i class="fa fa-briefcase"></i><span>        3x broj prtljaga</span></br>
                                            <i class="fa fa-user"></i><span>        4x broj osoba</span></br>
                                            <i class="fa fa-wrench"></i><span>        7 l/100km</span></br>
                                            <i class="fa fa-share"></i><span>        Transmisija: Manuelna</span>
                                        </div>
                                        <div class="col-sm-3 control-label" style="margin-left:3px">
                                            <button type="submit" class="btn btn-info btn-fill pull-right" style="margin-bottom:10px; margin-top:85px; margin-right:0px;"
                                                    onclick="@("window.location.href='" + @Url.Action("Rezervisi", "home") + "'");">
                                                Rezerviši
                                            </button>
                                        </div>

                                    </div>

                                </div>

                                <div class="footer">
                                    <hr>
                                    <ul class="pagination">
                                        <li class="page-item"><a class="page-link" href="@Url.Action("Index", "Home")">Prošla</a></li>
                                        <li class="page-item"><a class="page-link" href="@Url.Action("Index", "Home")">1</a></li>
                                        <li class="page-item"><a class="page-link" style="pointer-events: none; background-color: lightgray;">2</a></li>
                                        <li class="page-item"><a class="page-link" style="pointer-events:none">Slijedeća</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <footer class="footer">
                    <div class="container-fluid">
                        <p class="copyright pull-right">
                            &copy; 2016 <a>Dženana Bričić, Sabina Grošić, Aida Hasović</a>
                        </p>
                    </div>
                </footer>

            </div>
        </div>


</body>

</html>
