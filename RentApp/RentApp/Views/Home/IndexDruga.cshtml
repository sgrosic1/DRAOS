                        <p>Rezervacija</p>
                    </a>
                </li>


                @*<li>
                        <a href="Pretraga">
                            <i class="fa fa-search"></i>
                            <p>Pretraga</p>
                        </a>
                    </li>*@
                <li>
                    <a href="@Url.Action("Uvjeti", "Home")">
                        <i class="fa fa-globe"></i>
                        <p>Opći uvjeti</p>
